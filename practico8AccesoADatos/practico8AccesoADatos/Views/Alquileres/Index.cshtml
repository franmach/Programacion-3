@model IEnumerable<practico8AccesoADatos.Models.Alquilere>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Fecha de alquiler
            </th>
            <th>
                Fecha tope
            </th>
            <th>
                Fecha entregada
            </th>
            <th>
                Cliente
            </th>
            <th>
                Titulo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaAlquiler)
            </td>
